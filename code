import pygame
import time
import random
import time
import random
import json
import os
pygame.init()


pygame.display.set_caption("idle farmer") #generer la fenetre de notre jeu
screen = pygame.display.set_mode((1000,720))

background = pygame.image.load('assets/bg.jpg')  #importer de charger l'arriere plan

running=True #la laissé éveiller

while running :
  screen.blit(background,(0,-200)) #appliquer l'arrière plan de notre jeu
  pygame.display.flip() #mettre a jour l'écran
  for event in pygame.event.get():
    if event.type == pygame.QUIT :
      running = False
      pygame.quit()
      print("fermeture du jeu")
